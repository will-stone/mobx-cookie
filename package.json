{
  "name": "mobx-cookie",
  "version": "4.0.5",
  "description": "Syncs a cookie's value with a MobX observable, allowing observers to react to its changes.",
  "repository": "https://github.com/will-stone/mobx-cookie.git",
  "license": "MIT",
  "author": "Will Stone <hello@wstone.io>",
  "main": "dist/mobx-cookie.js",
  "scripts": {
    "prebuild": "rimraf ./pkg",
    "build": "npx @pika/pack build",
    "prepare": "husky install",
    "lint": "eslint . --ignore-path .gitignore",
    "prerelease": "npm run lint && npm run typecheck",
    "release": "np",
    "start": "cd demo && vite",
    "test": "jest",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "version": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "eslintConfig": {
    "extends": [
      "@will-stone/eslint-config/typescript",
      "@will-stone/eslint-config/node",
      "@will-stone/eslint-config/react",
      "@will-stone/eslint-config/jest"
    ]
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/pkg"
    ],
    "preset": "ts-jest"
  },
  "dependencies": {
    "js-cookie": "^2.2.1"
  },
  "devDependencies": {
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@types/jest": "^26.0.20",
    "@types/js-cookie": "^2.2.5",
    "@types/mockdate": "^2.0.0",
    "@types/node": "^14.14.28",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.0",
    "@vitejs/plugin-react-refresh": "^1.1.0",
    "@will-stone/eslint-config": "^2.3.0",
    "@will-stone/prettier-config": "^4.0.0",
    "eslint": "^7.24.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.2.6",
    "mobx": "^6.0.3",
    "mobx-react-lite": "^3.2.0",
    "mockdate": "^3.0.2",
    "np": "^7.4.0",
    "prettier": "^2.2.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5",
    "vite": "^2.0.0"
  },
  "peerDependencies": {
    "mobx": "^6.0.0"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "np": {
    "yarn": false,
    "contents": "./pkg"
  }
}
